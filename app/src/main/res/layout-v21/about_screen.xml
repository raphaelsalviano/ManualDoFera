<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.ufpb.dispositivosmoveis.manualdofera.AboutScreen">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ic_about"
        android:src="?attr/colorPrimary"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/logo_book"
        android:src="@drawable/logo_book"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_centerVertical="true"/>

    <view
        class="br.com.ufpb.dispositivosmoveis.manualdofera.RobotoLightTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/md_text_white"
        android:gravity="center"
        android:textSize="24sp"
        android:text="@string/app_name"
        android:id="@+id/name_app"
        android:layout_above="@+id/app_version"
        android:layout_centerHorizontal="true" />

    <view
        class="br.com.ufpb.dispositivosmoveis.manualdofera.RobotoLightTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_version"
        android:id="@+id/app_version"
        android:gravity="center"
        android:textColor="@color/md_text_white"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listAbout"
            android:layout_marginBottom="52dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/app_version"
            android:layout_marginTop="75dp" />

        <view
            class="br.com.ufpb.dispositivosmoveis.manualdofera.RobotoLightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/copyright1"
            android:id="@+id/copyright1"
            android:layout_above="@+id/copyright2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <view
            class="br.com.ufpb.dispositivosmoveis.manualdofera.RobotoLightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/copyright2"
            android:id="@+id/copyright2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>
